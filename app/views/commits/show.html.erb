<h2><%= @commit.name %></h2>
<h3><%= link_to @commit.sha, "https://github.com/cookpad/singapore/commit/#{@commit.sha}", :target => '_blank' %></h3>


<% @commit.problems.group_by(&:diagnosis).each do |diagnosis, problems| %>
  <h3><%= diagnosis.metric.name%></h3>
  <table class='zebra-striped'>
    <thead>
      <tr>
        <th>Problem</th>
        <th>File</th>
        <th>Line</th>
      </tr>    
    </thead>
    <%= render problems%>
  </table>
<% end %>